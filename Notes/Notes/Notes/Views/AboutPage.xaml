<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Notes.Views.AboutPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="About">
    <Grid RowDefinitions="Auto,*">
        <Image
            BackgroundColor="{StaticResource AppPrimaryColor}"
            HeightRequest="100"
            Opacity="0.85"
            Source="logo.png"
            VerticalOptions="Center" />
        <StackLayout
            Grid.Row="1"
            Margin="{StaticResource PageMargin}"
            Spacing="20">
            <Label FontSize="22">
                <Label.FormattedText>
                    <FormattedString>
                        <FormattedString.Spans>
                            <Span
                                FontAttributes="Bold"
                                FontSize="22"
                                Text="Notes" />
                            <Span Text=" v1.1" />
                        </FormattedString.Spans>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label Text="这是一个使用Xamarin写的小程序，用来保存平时的想法和待做的事情！" />
            <Label Text="此版本将数据存储改成数据库的形式！" />
            <Label Text="如果你觉得有用的话，可以给我一点打赏哦！！" />
            <Image HeightRequest="200" Source="pay_for_me.jpg" />
            <Button Clicked="OnButtonClicked" Text="访问我的Github" />
        </StackLayout>
    </Grid>
</ContentPage>